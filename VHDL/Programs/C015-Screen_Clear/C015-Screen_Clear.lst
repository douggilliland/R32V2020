; Clear the screen routine
clearScreen:
0000002e	20500000		ads r5,r0,r0	; start of screen character memory
0000002f	20800000		ads r8,r0,r0	; clear the character
00000030	40800020		lil	r8,0x0020	; fill with spaces
00000031	20900000		ads r9,r0,r0	; screen count
00000032	409007FE		lil r9,0x7FE	; loopCount	
looper:
00000033	81508000		spb r8			; put the character to the screen
00000034	20551000		ads	r5,r5,r1	; Increment screen pointer
00000035	20992000		ads r9,r9,r2	; decrement character counter
00000036	D2FFFFFD		bne	looper		; loop until complete
00000037	C0FFFFCA		bra	doneClear
; put a character to the screen and increment the address
putChar:
00000038	81508000		spb	r8			; write character to peripheral bus
00000039	20551000		ads	r5,r5,r1	; Go to the next character position	
0000003a	20791000		ads	r7,r9,r1	; return to calling routine (r9 is the calling address)
	