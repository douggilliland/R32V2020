; Read PS/2 keyboard character and put it to the Screen
; Requires V002 build with ANSI screen support
; On RETRO-EP4 card, requires PuTTY to be running to read serial port
; PuTTY needs to be in Hardware Handshake mode
; SigRok PS/2 decoder https://www.sigrok.org/blog/new-protocol-decoder-ps2

hello:	.string "R32V2020> "
missingHandshake: .string "*** Run PuTTY and enable hardware handshake ***"
screenPtr:	.long 0x0000
screenBase:	.long 0x0

;
; Read PS/2 character and put it to the SVGA Display and the Serial Port
;

main:
00000000	D4000048		bsr	clearANSIScreen
readDataMemory:
00000001	42800000		lix	r8,hello.lower
00000002	D4000027		bsr	printString
loopPS2Read_ScreenWrite:
00000003	D4000004		bsr	getPS2Char
putCharToANSIScreen:
00000004	D400004F		bsr	putCharToANSIScreen	; put the character to the screen
00000005	D4000011		bsr	putUARTChar
00000006	C0FFFFFD		bra	loopPS2Read_ScreenWrite

;
; getPS2Char
; returns character received in r8
;

getPS2Char:
00000007	A0409000		push	r9
00000008	A0405000		push	PAR
00000009	41500000		liu	PAR,0x0000
0000000a	40501000		lil	PAR,0x1000	; PS/2 Status
waitPS2RxStat:
0000000b	84905000		lpl	r9			; Read Status into r9
0000000c	23991000		and r9,r9,r1
0000000d	C3FFFFFE		bez waitPS2RxStat
getCharFromPS2:
0000000e	41500000		liu	PAR,0x0000
0000000f	40500800		lil PAR,0x0800
00000010	84805000		lpl	r8
00000011	41500000		liu	PAR,0x0000
00000012	40501000		lil	PAR,0x1000	; PS/2 Status
whilePS2RxStat:
00000013	A1504000		pull	PAR
00000014	A1904000		pull	r9
00000015	A1704000		pull	PC

;
; putUARTChar - Put a character to the UART
; passed character in r8 is sent out the UART
;

putUARTChar:
00000016	A0408000		push	r8
00000017	A0409000		push	r9
00000018	A040A000		push	r10
00000019	A0405000		push	PAR
0000001a	40A00002		lil	r10,0x2
0000001b	40501800		lil	PAR,0x1800	; UART Status
waitUartTxStat:
0000001c	84905000		lpl	r9			; Read Status into r9
0000001d	2399A000		and r9,r9,r10
0000001e	C7000004		bnz uartRdy
; remind user to enable HW handshake
0000001f	42800003		lix	r8,missingHandshake.lower
00000020	D4000009		bsr	printString
loopForever:
00000021	C0000003		bra	getOut
uartRdy:
00000022	40501801		lil PAR,0x1801
00000023	85508000		spl	r8			; echo the character
getOut:
00000024	A1504000		pull	PAR
00000025	A1A04000		pull	r10
00000026	A1904000		pull	r9
00000027	A1804000		pull	r8
00000028	A1704000		pull	PC
	
;
; printString - Print a screen to the current screen position
; pass value : r8 points to the start of the string
; strings are null terminated
; strings are bytes packed into long words
;

printString:
00000029	A0408000		push	r8				; save r8
0000002a	A0409000		push	r9				; save r9
0000002b	A0406000		push	DAR
0000002c	20680000		add	DAR,r8,ZERO		; set the start of the string
nextLong:
0000002d	64806000		ldl	r8				; get the string
0000002e	31808000		ens	r8,r8			; swap the endian
0000002f	429000FF		lix	r9,0xff			; mask for null termination check
00000030	23998000		and	r9,r9,r8
00000031	C3000013		bez	donePrStr
00000032	D4000021		bsr	putCharToANSIScreen			; write out the character
00000033	28808000		sr8	r8,r8
00000034	429000FF		lix	r9,0xff			; mask for null termination check
00000035	23998000		and	r9,r9,r8
00000036	C300000E		bez	donePrStr
00000037	D400001C		bsr	putCharToANSIScreen			; write out the character
00000038	28808000		sr8	r8,r8
00000039	429000FF		lix	r9,0xff			; mask for null termination check
0000003a	23998000		and	r9,r9,r8
0000003b	C3000009		bez	donePrStr
0000003c	D4000017		bsr	putCharToANSIScreen			; write out the character
0000003d	28808000		sr8	r8,r8
0000003e	429000FF		lix	r9,0xff			; mask for null termination check
0000003f	23998000		and	r9,r9,r8
00000040	C3000004		bez	donePrStr
00000041	D4000012		bsr	putCharToANSIScreen			; write out the character
lastOfLong:
00000042	20661000		add	DAR,DAR,ONE
00000043	C0FFFFEA		bra	nextLong
donePrStr:
00000044	A1604000		pull	DAR				; restore DAR
00000045	A1904000		pull	r9				; restore r9
00000046	A1804000		pull	r8				; restore r8
00000047	A1704000		pull	PC				; rts
	
;
; clearANSIScreen - Clear the screen routine
; ANSI Terminal has an escape sequence which clears the screen and homes cursor
;

clearANSIScreen:
00000048	A0408000		push	r8				; save r8
00000049	4280001B		lix		r8,0x1b			; ESC
0000004a	D4000009		bsr		putCharToANSIScreen
0000004b	4280005B		lix		r8,0x5b			; [
0000004c	D4000007		bsr		putCharToANSIScreen
0000004d	42800032		lix		r8,0x32			; 2
0000004e	D4000005		bsr		putCharToANSIScreen
0000004f	4280004A		lix		r8,0x4A			; J
00000050	D4000003		bsr		putCharToANSIScreen
00000051	A1804000		pull	r8
00000052	A1704000		pull	PC				; rts

;
; putCharToANSIScreen - Put a character to the screen
; Character to put to screen is in r8
; Return address (-1) is on the stack - need to increment before return
;

putCharToANSIScreen:
00000053	A0409000		push	r9
00000054	A0405000		push	PAR
00000055	A040A000		push	r10
00000056	42A00002		lix		r10,0x2		; TxReady bit
00000057	42500000		lix		PAR,0x0		; UART Status
waitScreenTxStat:
00000058	84905000		lpl		r9			; Read Status into r9
00000059	2399A000		and 	r9,r9,r10
0000005a	C3FFFFFE		bez 	waitScreenTxStat
0000005b	42500001		lix 	PAR,0x1
0000005c	85508000		spl		r8			; echo the character
0000005d	A1A04000		pull	r10
0000005e	A1504000		pull	PAR
0000005f	A1904000		pull	r9
00000060	A1704000		pull	PC
	
;
; setCharPos - Move to x,y position
; x,y value is passed in r8
;	First 6 least significant bits (0-63 columns)
; 	Next 5 bits (row on the screen)
; screenBase has the base address of the screen memory
; screenPtr contains the address of the current char position
;

setCharPos:
00000061	A0409000		push	r9						; save r9
00000062	A040A000		push	r10						; save r10
00000063	A0406000		push	DAR						; save DAR
00000064	41A00000		liu	r10,screenBase.upper
00000065	40A00010		lil	r10,screenBase.lower
00000066	206A0000		add	DAR,r10,ZERO			; DAR points to the screenBase
00000067	64A06000		ldl	r10						; r10 has the screen base address
00000068	20A80000		add	r10,r8,ZERO				; add passed position to base
00000069	41900000		liu	r9,screenPtr.upper
0000006a	4090000F		lil	r9,screenPtr.lower		; r9 is the ptr to screenPtr
0000006b	20690000		add	DAR,r9,ZERO				; DAR points to screenPtr
0000006c	6560A000		sdl	r10						; store new screen address
0000006d	A1604000		pull DAR						; restore DAR
0000006e	A1A04000		pull r10						; restore r10
0000006f	A1904000		pull r9						; restore r9
00000070	A1704000		pull	PC						; rts
