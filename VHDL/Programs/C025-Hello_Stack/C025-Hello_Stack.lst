; Clear the screen routine
clearScreen:
00000030	20500000		ads r5,r0,r0	; start of screen character memory
00000031	20800000		ads r8,r0,r0	; clear the character
00000032	40800020		lil	r8,0x0020	; fill with spaces
00000033	20900000		ads r9,r0,r0	; screen count
00000034	409007FE		lil r9,0x7FE	; loopCount	
looper:
00000035	81508000		spb r8			; put the character to the screen
00000036	20551000		ads	r5,r5,r1	; Increment screen pointer
00000037	20992000		ads r9,r9,r2	; decrement character counter
00000038	D2FFFFFD		bne	looper		; loop until complete
00000039	A3A04000		lss	r10			; load calling address
0000003a	20AA1000		ads	r10,r10,r1	; skip the call
0000003b	207A1000		ads	r7,r10,r1	; jump to the next address (rts)
; put a character to the screen and increment the address
putChar:
0000003c	81508000		spb	r8			; write character to peripheral bus
0000003d	20551000		ads	r5,r5,r1	; Go to the next character position	
0000003e	A3A04000		lss	r10			; load calling address
0000003f	20AA1000		ads	r10,r10,r1	; skip the call
00000040	207A1000		ads	r7,r10,r1	; jump to the next address (rts)
	