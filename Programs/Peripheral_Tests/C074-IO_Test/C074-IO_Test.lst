	; tbd add code for line too long	
gotEOL:
00000034	4280000A		lix		r8,0x0A				; Echo line feed after CR
00000035	D4000257		bsr		putCharToANSIScreen	; Put the character to the screen
00000036	D400021A		bsr		putCharToUART		; Echo character back to the UART
